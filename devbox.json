{
  "packages": [
    "go@1.23.1",
    "postgresql@16.4",
    "glibcLocales@2.40-36"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "export \"GOROOT=$(go env GOROOT)\""
    ],
    "scripts": {
      "install":   "go get ./...",
      "build_run": "go build -o gator ./cmd/main && ./gator",
      "run":       "go run .",
      "test":      "go test ./...",
      "tidy":      "go mod tidy"
    }
  }
}
